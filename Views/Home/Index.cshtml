@using Modas.Models
@model IEnumerable<Event>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MODAS</title>
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <table class="container table table-bordered">
        <tr><th>Date</th><th>Time</th><th>Location</th></tr>
        @foreach (var e in Model)
        {
            <tr>
                <td>@String.Format("{0: ddd, MMM dd, yyyy}", e.TimeStamp)</td>
                <td>@String.Format("{0:hh:mm tt}", e.TimeStamp)</td>
                <td>@e.Location.Name</td>
            </tr>
        }
    </table>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <input class="mySpinner" type="number" value="1" min="0" max="10" step="1" />
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script>
        $(function () {
            console.log('You found me');
            var str = location.href.substring(location.href.length - 1, location.href.length);
            console.log(str);
            $('.mySpinner').val(str);
            $('.mySpinner').on('change', function () {
                location.href = "page" + $(this).val();
                console.log($('.mySpinner').val());
            });
        });

        $('.mySpinner').inputSpinner()
    </script>
</body>
</html>
